<?xml version="1.0"?>
<launch>
    <arg name="robot_name" value=""/>
    <param name="tf_prefix" value="$(arg robot_name)" />

    <!-- Map server -->
    <arg name="map_file" default="/home/lui/itri_space.yaml"/>
    <node name="map_server" pkg="map_server" type="map_server" args="$(arg map_file)" />

    <!-- Map server for working zones -->
    <arg name="map_file_2" default="/home/lui/itri_map.yaml"/>
    <node name="map_server_work" pkg="map_server" type="map_server" args="$(arg map_file_2)">
        <remap from="/map" to="/map_work"/>
    </node>

    <!-- Laser Scan Matcher -->
    <node name="laser_scan_matcher" pkg="laser_scan_matcher" type="laser_scan_matcher_node" >
        <param name="fixed_frame" value="odom" />
        <param name="base_frame" value="base_footprint" />
	    <param name="use_imu" value="false" />
	    <param name="use_odom" value="false" />
	    <param name="use_vel" value="true" />
        <param name="publish_tf" value="true"/>
        <param name="publish_pose" value="true"/>
    </node>

    <!-- AMCL -->
    <arg name="custom_amcl_launch_file" default="$(find kobuki_navigation)/launch/includes/amcl_for_laser.launch.xml"/>
    <arg name="initial_pose_x" default="0.0"/> 
    <arg name="initial_pose_y" default="0.0"/> 
    <arg name="initial_pose_a" default="0.0"/>
    <include file="$(arg custom_amcl_launch_file)">
        <arg name="robot_name"     value="$(arg robot_name)" />
        <arg name="initial_pose_x" value="$(arg initial_pose_x)"/>
        <arg name="initial_pose_y" value="$(arg initial_pose_y)"/>
        <arg name="initial_pose_a" value="$(arg initial_pose_a)"/>
    </include>

    <!-- Move base -->
    <arg name="custom_param_file" default="$(find kobuki_navigation)/param/costmap_common_params.yaml"/>
    <include file="$(find kobuki_navigation)/launch/includes/move_base_for_laser.launch.xml">
        <arg name="robot_name"     value="$(arg robot_name)" />
        <arg name="custom_param_file" value="$(arg custom_param_file)"/>
        <arg name="global_frame_id"   value="map" />
    </include>

    <!-- Auto Docking -->
    <!--include file="$(find kobuki_auto_docking)/launch/minimal.launch">
    </include-->
    <!-- Rviz -->
    <node pkg="rviz" type="rviz" name="rviz"
        args="-d $(find kobuki_navigation)/rviz_cfg/one_turtle_navigation.rviz"/>

</launch>
